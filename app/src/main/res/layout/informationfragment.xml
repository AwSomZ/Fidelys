<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:layout_constraintCircleRadius="@dimen/cardview_default_elevation"
    android:background="@drawable/transactionboard"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/np"
        android:layout_width="374dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:fontFamily="@font/soda"
        android:text="Tammar Mohamed Salah"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221" />

    <TextView
        android:id="@+id/sexe"
        android:layout_width="190dp"
        android:layout_height="77dp"

        android:paddingTop="5dp"
        android:text="M"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/soda"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/identifiant"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/identifiant"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/white"
        android:padding="8dp"
        android:text="000000002"
        android:textAlignment="center"
        android:fontFamily="@font/soda"
        android:textColor="@color/lred"
        android:textSize="25dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/np"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>