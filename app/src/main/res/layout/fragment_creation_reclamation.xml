<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="5sp"
    android:layout_marginTop="170dp"
    tools:context=".CreationReclamationFragment">

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/hardy"
        android:text="Créez Votre Reclamation"
        android:textColor="@color/lred"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/soda"
        android:text="En cas d'un probleme vous pouvez toujours informer l'équipe fidelys en créant une reclamation avec le formulaire ci_dessous"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView30"
        app:layout_constraintVertical_bias="0.068">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/soda"
                android:text="Titre"
                android:textColor="@color/lred"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/titre"
                android:layout_width="260dp"
                android:layout_height="41dp"
                android:layout_column="2"
                android:layout_marginLeft="30sp"

                android:background="@drawable/input"
                android:fontFamily="@font/soda" />

        </TableRow>

        <TableRow android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/soda"
                android:text="Description"
                android:textColor="@color/lred"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/contenu"
                android:layout_width="240dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:layout_marginLeft="30sp"
                android:background="@drawable/input"
                android:fontFamily="@font/soda"
                android:lines="5"
                android:paddingLeft="10dp"
                android:scrollbars="vertical" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/creer"
        android:layout_width="274dp"
        android:layout_height="43dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:fontFamily="@font/soda"
        android:text="Créer"
        app:backgroundTint="@color/lred"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.424" />


</androidx.constraintlayout.widget.ConstraintLayout>