<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:layout_marginLeft="10dp">

               <TextView
                   android:id="@+id/de"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:fontFamily="@font/soda"
                   android:textSize="20dp"
                   android:textColor="@color/lred"
                   android:textAlignment="center"
                   android:text="TUN"/>

               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/to"/>

               <TextView
                   android:id="@+id/vers"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/soda"
                   android:layout_marginTop="5dp"
                   android:textSize="20dp"
                   android:textColor="@color/lred"
                   android:textAlignment="center"
                   android:text="GBP"/>

           </LinearLayout>

            <TextView
                android:id="@+id/type"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/soda"
                android:text="Aller-Simple"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">

                <TextView
                    android:id="@+id/datealler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/soda"
                    android:textSize="20dp"
                    android:textColor="@color/lred"
                    android:textAlignment="center"
                    android:text="2020-02-05"/>

                <TextView
                    android:id="@+id/dateretour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/soda"
                    android:layout_marginTop="30dp"
                    android:textSize="20dp"
                    android:textColor="@color/lred"
                    android:textAlignment="center"
                    android:text="2020-03-05"/>

            </LinearLayout>

            <TextView
                android:id="@+id/classe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/soda"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Classe Affaires"/>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>